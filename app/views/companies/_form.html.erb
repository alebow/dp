<%= simple_form_for(@company, :html => { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>
  <%= f.input :name, label: 'Company Name' %>
  <%= f.input :website, label: 'Company URL' %>
  <%= f.input :short_description, label: 'Company Description' %>
  <%= f.button :submit, class: "btn btn-primary" %>



<% end %>
