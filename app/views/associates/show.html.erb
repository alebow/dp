<% provide(:title, @associate.name) %>
<h1><%= @associate.name %></h1>
<div class="well">
	<table class="table table-hover">
		<thead>
			<th>Name</th>
			<th>Email</th>
			<th>Bio</th>
			<th>Team</th>
		</thead>
		<tbody>
			<td><%= link_to @associate.name, edit_associate_path(@associate) %></td>
			<td><%= @associate.email %></td>
			<td><%= @associate.bio %></td>
			<td><%= link_to @associate.group.name, @associate.group %></td>
		</tbody>
	</table>
</div>


<div class="tabbable"> <!-- Only required for left/right tabs -->
  <ul class="nav nav-tabs">
    <li class="active"><a href="#tab1" data-toggle="tab"><%= @associate.name %>'s Searches (<%= @associate.searches.count %>)</a></li>
    <li><a href="#tab2" data-toggle="tab">Analytics</a></li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane active" id="tab1">
    	<% if !@associate.searches.empty? %>
      <table class="table table-striped">
				<thead>
					<th>Client</th>
					<th>Position</th>
				</thead>
				<tbody>
					<%= render @searches %>
				</tbody>
			</table>
			<% else %>
				<%= link_to 'Add a new search!', new_search_path %>
			<% end %>
    </div>
    <div class="tab-pane" id="tab2">
      <table class="table table-striped">
				<tbody>
					<p>Analytics go here.</p>
				</tbody>
			</table>
    </div>
  </div>
</div>